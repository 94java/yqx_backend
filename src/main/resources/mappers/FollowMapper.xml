<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.jiusi.springbootinit.mapper.FollowMapper">
    <resultMap id="BaseResultMap" type="cc.jiusi.springbootinit.model.entity.Follow">
        <!--@Table follow-->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="uid" jdbcType="INTEGER" property="uid"/>
        <result column="ref_uid" jdbcType="INTEGER" property="refUid"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="del_flag" jdbcType="VARCHAR" property="delFlag"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `uid`,
        `ref_uid`,
        `create_time`,
        `del_flag`
    </sql>

    <!--查询单个-->
    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from `follow`
        where id = #{id,jdbcType=INTEGER}
    </select>

    <!--查询全部-->
    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from yqx_db.follow
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="refUid != null">
                and ref_uid = #{refUid}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="delFlag != null and delFlag != ''">
                and del_flag = #{delFlag}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1) from `follow`
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="refUid != null">
                and ref_uid = #{refUid}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="delFlag != null and delFlag != ''">
                and del_flag = #{delFlag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="false">
        insert into follow(id, uid, ref_uid, create_time, del_flag)
        values (#{id}, #{uid}, #{refUid}, #{createTime}, #{delFlag})
    </insert>

    <!--批量新增-->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="false">
        insert into follow(id, uid, ref_uid, create_time, del_flag)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.id}, #{entity.uid}, #{entity.refUid}, #{entity.createTime}, #{entity.delFlag})
        </foreach>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update follow
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="refUid != null">
                ref_uid = #{refUid},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="delFlag != null and delFlag != ''">
                del_flag = #{delFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--批量删除-->
    <insert id="deleteBatchByIds">
        delete from `follow` where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </insert>
</mapper>

